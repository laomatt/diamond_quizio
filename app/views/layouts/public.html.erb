<!DOCTYPE html>
<html>
<head>
  <title>Quizio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <%= csrf_meta_tags %>
</head>




<% if user_signed_in? %>
  <div class="navbar">
    <ul>

      <li>
      <a href="/user_info/<%= current_user.id %>/show_info">
        <img src="<%= current_user.avatar_url %>" alt="">
        <%= current_user.name %>
      </a>
      |
      </li>
      <li>
      <a href="/questions/new">
        Submit Trivia
      </a>
      |
      </li>
      <li>
      <a href="/categories">
       Browse Quizes
      </a>
      |
      </li>
      <li>
      <a href="/">
        Home
      </a>
      |
      </li>

      <li>
        <div style="float:right">
          <a href="/user_log_out_route/sign_out">Log out</a>
        </div>
      </li>
    </ul>
  </div>

<% else %>
<div class="navbar signed_out">

  <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
</div>
<% end %>

<% if current_user %>
 <% if current_user.admin? %>
    <div class="admin-box">
      <li>
        <a href="#" class="drop-admin-box">Admin controls</a>
      </li>
      <ul class="admin-links" style="display:none;">
        <li>
          <a href="/manage/questions">question pool</a>
        |</li>
        <li>
          <a href="/manage/admins/question_crud">
            pending questions
          </a>
        |</li>
        <li>
          <a href="/manage/admins/user_crud">
            users control
          </a>
        |</li>
        <li>
          <a href="/manage/admins/dashboard">admin dashboard</a>
        |</li>
        <div style="float:right">
          <a href="#" class="close-admin-box">
            [x]
          </a>
        </div>
      </ul>
    </div>
    <% end %>
  <% end %>
<hr>


<body>
  <%= yield %>
</body>

<form action=<%=destroy_user_session_path%> method="delete" class="log-out-form">
  <input type="hidden" value="delete" name="method">
</form>
<script>
  $('body').on('click', '.logout-button', function(event) {
    event.preventDefault();
    $('.log-out-form').trigger('submit');
  });

  $("body").on('click', '.drop-admin-box', function(event) {
    event.preventDefault();
    $('.admin-links').slideDown('300', function() {

    });
  });
  $('body').on('click', '.close-admin-box', function(event) {
    event.preventDefault();
    $('.admin-links').slideUp(300)
  });
</script>